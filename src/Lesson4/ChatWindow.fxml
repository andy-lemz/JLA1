<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Lesson4.ChatWindow"
            prefHeight="400.0" prefWidth="600.0">
<TextArea fx:id="chat" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="5" AnchorPane.rightAnchor="5" maxHeight="200" editable="false"/>
    <TextArea fx:id="yourMessage" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="5" maxWidth="200" maxHeight="50" onKeyPressed="#keyLog"/>
    <Button text="send" onAction="#sendMessage" AnchorPane.topAnchor="200" AnchorPane.rightAnchor="5" minHeight="50" minWidth="50"/>

</AnchorPane>
